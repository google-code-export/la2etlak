 <%= form_for(:user, :url => {:action => 'update' }) do |f| %>
 
 <div><h4>Personal Info</h4></div>
</br>

  <div class="field" align="center">
    <%= f.label :Nick_Name %>
    <%= f.text_field :name,:style => "height:40px; width:95%" %>
  </div>

    <div class="field" align="center">
    <%= f.label :First_Name %>
    <%= f.text_field :first_name,:style => "height:40px; width:95%" %>
  </div>

    <div class="field" align="center">
    <%= f.label :Last_Name %>
    <%= f.text_field :last_name,:style => "height:40px; width:95%" %>
  </div>
</br>
<div><h4>Change Password<h4></div>
</br>
  <div class="field" align="center">
    <%= f.label :Password %>
    <%= f.password_field :password,:style => "height:40px; width:95%"%>
  </div>

  <div class="field" align="center">
    <%= f.label :Password_confirmation %>
    <%= f.password_field :password_confirmation,:style => "height:40px; width:95%"%>
  </div>

  <div class="actions"  align="center">
    <%= submit_tag("Update" ) %>
  </div>

    <% end %>





