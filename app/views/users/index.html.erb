	</ul>
			<%if @users !=nil%>
		  		<% @users.each do |nf| %>
				<%@user = nf%>	
				<div>
					<span class="pull-left redbadge " style=" -webkit-transform: rotate(-45deg);	
							-moz-transform: rotate(-45deg);
							-ms-transform: rotate(-45deg);
							-o-transform: rotate(-45deg);
							transform: rotate(-45deg); 
