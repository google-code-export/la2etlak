					<% name = @user.email %>
					<% else %>
					<% name = @user.first_name %>
					<%  end %>
					<font size="3"><b><%= 
					link_to(name , {:controller => "users", :action => "show",:id => @user.id}) %></b></font>
					
						<div class="well admin_story_feed "  style=" border-right:5px solid #b94a48; ">
							<% if @user.image == nil%>
				     		<%= image_tag "logo.jpeg"  , style: "float:left; margin-right:20px; width=150x; height:150px;" %>
				     		<% else %>
				           <img style="width:150px; height:150px;" src= <%= user.image %> >
				            <% end %>
							<div class"control-panel">
								<% if !(@user.deactivated) %>
								<ul class="nav nav-list">
									<li class="nav-header">Status:</li>
									<span class="greenbadge">Active</span>
									<% elsif @user.deactivated %>
									<ul class="nav nav-list">
										<li class="nav-header">Status:</li>
										<li><span class="redbadge">Deactivated</span></li>
										<% end %>
                                                                               </br></br> <li class="nav-header">E-mail:</li>
										<li><h3><%= @user.email  %></h3></li>
										
									
									<%= link_to "view Statistics", 
													{:controller => 'statistics', :action => 'users',:id => @user.id }, 
													class: "btn btn-primary"  %>
							</div>
					</div>
				</div>
				<%end%>
		<%else%>
				<h2 class="alert alert-error" align="center">No Users to Show !!</h2>
		<%end%>
		<div class="apple_pagination">
		    <%= will_paginate @users, :container => false %>
