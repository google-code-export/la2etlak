							<% if nf.image == nil%>
				     		<%=  link_to (image_tag "logo.jpeg"  , :style => "float:left; margin-right:20px; width=150x; height:150px;"), {:action => 'show', :controller => 'users' , :id => nf.id } %>
				     		<% else %>
				            <%= link_to image_tag(@interest.image), :action => 'show', :controller => 'users' , :id =>  nf.id  %>
				            <% end %>
							<div class"control-panel">
								<% if !(nf.deactivated) %>
								<ul class="nav nav-list">
									<li class="nav-header">Status:</li>
									<span class="greenbadge">Active</span>
									<% elsif nf.deactivated %>
									<ul class="nav nav-list">
										<li class="nav-header">Status:</li>
										<li><span class="redbadge">Deactivated</span></li>
										<% end %>
                                                                               </br></br> <li class="nav-header">E-mail:</li>
										<li><h3><%= nf.email  %></h3></li>
										
									
									<%= link_to "view Statistics", 
													{:controller => 'statistics', :action => 'users',:id => nf.id }, 
													class: "btn btn-primary"  %>
							</div>
					</div>
				</div>
				<%end%>
		<%else%>
				<h2 class="alert alert-error" align="center">No Users to Show !!</h2>
		<%end%>
		<div class="apple_pagination">
		    <%= will_paginate @users, :container => false %>
